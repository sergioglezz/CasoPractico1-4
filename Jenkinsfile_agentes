pipeline {
    agent none

    stages {

        stage('Get Code') {
            agent any
            steps {
                git branch: 'develop', url: 'https://github.com/sergioglezz/CasoPractico1-4.git'
                
                sh '''
                    curl -H "Authorization: token ${GIT_TOKEN}" \
                        -o samconfig.toml \
                        https://raw.githubusercontent.com/sergioglezz/todo-list-aws-config/staging/samconfig.toml
                '''
                
                sh 'ls -la'
                stash name: 'source-code', includes: '**/*'
            }
        }

        stage('Static Test') {
            agent { label 'agente1' } 
            steps {
                unstash 'source-code'
                
                sh 'pip3 install flake8 bandit --break-system-packages -q'

                sh '/var/lib/jenkins/.local/bin/flake8 --exit-zero --format=pylint src > flake8.out'
                recordIssues tools: [flake8(name: 'Flake8', pattern: 'flake8.out')]

                sh '/var/lib/jenkins/.local/bin/bandit --exit-zero -r src -f custom -o bandit.out --msg-template "{abspath}:{line}: [{test_id}] {msg}"'
                recordIssues tools: [pyLint(name: 'Bandit', pattern: 'bandit.out')]
            }
        }
        
        stage('Deploy') {
            agent any 
            steps {
                unstash 'source-code'
                
                sh 'sam build'
                
                sh '''
                    sam deploy \
                        --config-file samconfig.toml \
                        --config-env staging \
                        --no-confirm-changeset \
                        --no-fail-on-empty-changeset
                '''
                
                script {
                    env.API_URL = sh(
                        script: "aws cloudformation describe-stacks --stack-name todo-list-aws-staging --query 'Stacks[0].Outputs[?OutputKey==`BaseUrlApi`].OutputValue' --region us-east-1 --output text",
                        returnStdout: true
                    ).trim()
                    echo "API URL: ${env.API_URL}"
                    
                    writeFile file: 'api_url.txt', text: env.API_URL
                    stash name: 'api-url', includes: 'api_url.txt'
                }
            }
        }

        stage('Rest Test') {
            agent { label 'agente2' }
            steps {
                unstash 'source-code'
                unstash 'api-url'
                
                script {
                    env.API_URL = readFile('api_url.txt').trim()
                    echo "API URL recuperada: ${env.API_URL}"
                }
                
                sh 'pip3 install pytest requests --break-system-packages -q'
                sh """
                    export PATH=\$PATH:/var/lib/jenkins/.local/bin
                    export BASE_URL='${env.API_URL}'
                    pytest test/integration/todoApiTest.py --junitxml=result-rest.xml -v
                """
                
                stash name: 'test-results', includes: 'result-rest.xml'
            }
        }

        stage('Promote') {
            agent any
            steps {
                unstash 'source-code'
                unstash 'test-results'
                junit 'result-rest.xml'
                
                withCredentials([usernamePassword(
                    credentialsId: 'github-credentials',
                    usernameVariable: 'GIT_USER',
                    passwordVariable: 'GIT_TOKEN'
                )]) {
                    sh '''
                        git config user.email "jenkins@devops.com"
                        git config user.name "Jenkins CI"
                        git remote set-url origin https://${GIT_USER}:${GIT_TOKEN}@github.com/sergioglezz/CasoPractico1-4.git
                        
                        # 1. Actualizar referencias remotas
                        git fetch origin
                        
                        # 2. Cambiar a master y actualizarlo
                        git checkout master
                        git pull origin master
                        
                        # 3. Intentar merge
                        if git merge develop --no-edit; then
                            echo "Merge exitoso sin conflictos"
                        else
                            echo "Conflicto detectado en Jenkinsfile, resolviendo..."
                            
                            # Mantener la versi√≥n de master del Jenkinsfile
                            git checkout --ours Jenkinsfile
                            git add Jenkinsfile
                            
                            # Completar el merge
                            git commit -m "Merge develop to master (keeping master Jenkinsfile)"
                        fi
                        
                        # 4. Push
                        git push origin master
                    '''
                }
            }
        }

    }

    post {
        success {
            echo 'Pipeline CI completado con exito!'
        }
        failure {
            echo 'Pipeline CI fallido!'
        }
    }
}