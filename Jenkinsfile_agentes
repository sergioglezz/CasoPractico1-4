pipeline {
    agent none

    stages {

        stage('Get Code') {
            agent any
            steps {
                git branch: 'master', url: 'https://github.com/sergioglezz/CasoPractico1-4.git'
                echo WORKSPACE
                
                dir('config-temp') {
                    git branch: 'production', url: 'https://github.com/sergioglezz/todo-list-aws-config.git'
                }
                
                sh '''
                    cp config-temp/samconfig.toml .
                    rm -rf config-temp
                    
                    echo "=== Configuraci√≥n de production descargada ==="
                    cat samconfig.toml
                '''
                
                sh 'ls -la'
                stash name: 'source-code', includes: '**/*'
            }
        }
        
        stage('Deploy') {
            agent any 
            steps {
                unstash 'source-code'
                
                sh 'sam build'
                
                sh '''
                    sam deploy \
                        --config-file samconfig.toml \
                        --config-env production \
                        --no-confirm-changeset \
                        --no-fail-on-empty-changeset
                '''
                
                script {
                    env.API_URL = sh(
                        script: "aws cloudformation describe-stacks --stack-name todo-list-aws-production --query 'Stacks[0].Outputs[?OutputKey==`BaseUrlApi`].OutputValue' --region us-east-1 --output text",
                        returnStdout: true
                    ).trim()
                    echo "API URL: ${env.API_URL}"
                    
                    writeFile file: 'api_url.txt', text: env.API_URL
                    stash name: 'api-url', includes: 'api_url.txt'
                }
            }
        }

        stage('Rest Test') {
            agent { label 'agente2' }
            steps {
                unstash 'source-code'
                unstash 'api-url'
                
                script {
                    env.API_URL = readFile('api_url.txt').trim()
                    echo "API URL recuperada: ${env.API_URL}"
                }
                
                sh 'pip3 install pytest requests --break-system-packages -q'
                sh """
                    export PATH=\$PATH:/var/lib/jenkins/.local/bin
                    export BASE_URL='${env.API_URL}'
                    pytest test/integration/todoApiTest.py -m readonly --junitxml=result-rest.xml -v
                """
                
                stash name: 'test-results', includes: 'result-rest.xml'
            }
        }

        stage('Publish Results') {
            agent any
            steps {
                unstash 'test-results'
                junit 'result-rest.xml'
            }
        }

    }

    post {
        success {
            echo 'Pipeline CD completado con exito!'
        }
        failure {
            echo 'Pipeline CD fallido!'
        }
    }
}